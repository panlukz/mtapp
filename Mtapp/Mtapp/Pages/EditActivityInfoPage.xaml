<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mtapp.Pages.EditActivityInfoPage"
             Title="Edit activity">
  <StackLayout>
    <Label Text="Edit activity" VerticalOptions="Center" HorizontalOptions="Center" />  
    <Label Text="Name:" />
    <Entry Text="{Binding Name}" />
    <Label Text="Description" />
    <Entry Text="{Binding Description}" />
    
    <StackLayout Orientation="Horizontal">
      <Button Text="Save" Command="{Binding UpdateActivityInfoCommand}" />
      <Button Text="Cancel" Command="{Binding CancelUpdateCommand}" />
    </StackLayout>
    
  </StackLayout>
  
</ContentPage>