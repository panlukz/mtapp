<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B3MobileApp.Views.OptionsView">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Save" Command="{Binding SaveCommand}" />
  </ContentPage.ToolbarItems>
  <TableView Intent="Settings">
    <TableRoot>
      <TableSection Title="General">
        <SwitchCell Text="Something smart" />
        <ViewCell>
          <StackLayout Orientation="Horizontal" Padding="16, 0">
            <Label Text="Min distance (meters)" VerticalOptions="Center" WidthRequest="100"/>
            <Label Text="{Binding MinDistance}" VerticalOptions="Center" WidthRequest="50" />
            <Slider HorizontalOptions="FillAndExpand" Maximum="20" Minimum="1" Value="{Binding MinDistance}"/>
          </StackLayout>
        </ViewCell>
        <ViewCell>
          <StackLayout Orientation="Horizontal" Padding="16, 0">
            <Label Text="Min time (miliseconds)" VerticalOptions="Center" WidthRequest="100" />
            <Label Text="{Binding MinTime}" VerticalOptions="Center" WidthRequest="50" />
            <Slider HorizontalOptions="FillAndExpand" Maximum="10000" Minimum="500" Value="{Binding MinTime}"/>
          </StackLayout>
        </ViewCell>
      </TableSection>
    </TableRoot>
  </TableView>
  
</ContentPage>